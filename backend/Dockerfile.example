FROM node:16-alpine
WORKDIR /app
COPY package.json .
RUN yarn
COPY . .

ENV DB_SERVER=<>
ENV DB_PORT=<>
ENV DB_DATABASE=<>
ENV DB_USER=<>
ENV DB_PASSWORD=<>
ENV DB_ENCRYPT=<false/true>
ENV DB_TIMEOUT=120000
ENV FTP_HOST=<>
ENV FTP_USER=<>
ENV FTP_PASSWORD=<>
ENV FTP_SECURE=<false/true>
ENV FTP_SHIPMENTS_DOWNLOAD_DIR=<>
ENV FTP_STATUSES_UPLOAD_DIR=<>
ENV FTP_TIMEOUT=30
ENV FTP_VERBOSE=false
ENV FTP_ENCODING=utf8
ENV DATACHANGE_TIMEOUT=60
ENV PORT=4000
ENV LOCAL_SYSTEM_IP=<>
ENV STREAMS_PATH=./streams

EXPOSE 4000

CMD ["yarn", "start"]
